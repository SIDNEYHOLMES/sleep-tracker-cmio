generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User { // User Table
  id Int @id @default(autoincrement()) 
  email String @unique
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sleepDays SleepDay[] 
  sleepMonths SleepMonth[]
}

model SleepDay {
  id Int @id @default(autoincrement())
  sleepRating Int[]
  userId Int
  user User @relation(fields: [userId], references: [id]) // points to the owner user for there id to be referenced as the userId
  sleepMonthId Int
  sleepMonth SleepMonth @relation(fields: [sleepMonthId], references: [id]) // point to the sleepmonth to reference the sleepmonth id as the id
  createdAt DateTime @default(now())
}

model SleepMonth {
  id Int @id @default(autoincrement())
  author User @relation(fields: [authorId], references: [id]) // sleepMonth author id is refrenced by the user id
  authorId Int
  sleepDays SleepDay[] // sleep month can have many ssleep days
  startDate DateTime @default(now())
  endDate DateTime @default(now())
}